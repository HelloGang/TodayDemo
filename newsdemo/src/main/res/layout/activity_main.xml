<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.bwie.newsdemo.MainActivity">
    <LinearLayout
        android:id="@+id/ll_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/im_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_newhome_tabbar_press"
                />
            <TextView
                android:id="@+id/te_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#f00"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/im_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_newvideo_tabbar"
                />
            <TextView
                android:id="@+id/te_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视屏"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_care"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/im_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_newcare_tabbar"
                />
            <TextView
                android:id="@+id/te_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/im_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/b_newnologin_tabbar"
                />
            <TextView
                android:id="@+id/te_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未登录"
                />
        </LinearLayout>
    </LinearLayout>
            <FrameLayout
                android:id="@+id/fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_below"
                ></FrameLayout>
</RelativeLayout>
